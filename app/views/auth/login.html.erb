<% content_for :extra_head do %>
  <title>Login - GeyserList</title>
  <meta property="og:title" content="Login - GeyserList" />
  <meta property="og:description" content="Login to GeyserList" />
  <meta name="description" content="Login to GeyserList" itemprop="description">
  <meta property="twitter:title" content="Login - GeyserList">
<% end %>

<form class="form-signin" method="post" action="/authenticate">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="text-center mb-4">
    <%= image_tag "icon.png", class: "mb-4", alt: "Geyser Logo", width: "72", height: "72" %>
    <h1 class="h3 mb-3 font-weight-normal">Sign in</h1>
    <p>
      Sign in with an integration.<br />
      If an account does not exist, a new one will be created!
    </p>
  </div>

  <%= link_to (button_tag raw('<i class="fab fa-discord"></i> Sign in with Discord'), class: 'btn btn-lg btn-block btn-dark'), "/login/discord", class: 'deco-none' %><br />
  <%= link_to (button_tag raw('<i class="fab fa-google"></i> Sign in with Google'), class: 'btn btn-lg btn-block btn-dark'), "/login/google", class: 'deco-none' %><br />
  <%= link_to (button_tag raw('<i class="fas fa-times-circle"></i> Cancel'), class: 'btn btn-lg btn-block btn-danger'), "/", class: 'deco-none' %><br />
  <p class="mt-5 mb-3 text-muted text-center">Copyright &copy; GeyserMC 2019 - <%= Time.now.year %></p>
</form>
